<h1>List of all Products</h1>

  <table>
    <tr>
      <th>Product Name</th>
      <th>Product Price</th>
      <th>Add to Cart</th>
    </tr>
    <% @products.each do |product|%>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to("Add to Cart", cart_add_path(product_id: product.id ))%></td>
      </tr>
    <%end %>
  </table>
