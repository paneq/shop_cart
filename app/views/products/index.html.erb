<h1>List of all Products</h1>

  <table>
    <tr>
      <th>Product Name</th>
      <th>Product Price</th>
      <th>Add to Cart</th>
    </tr>
    <% @products.each do |product|%>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %> </td>
      </tr>
    <%end %>
  </table>
