<h1>List of all Products</h1>

  <table>
    <tr>
      <th>Product Name</th>
      <th>Product Price</th>
      <th>Add to Cart</th>
    </tr>
    <% @products.each do |product|%>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><a href="/cart/<%= product.id%>"> Add to Cart</a></td>
      </tr>
    <%end %>
  </table>
